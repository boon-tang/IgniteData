{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory Name",
			"defaultValue": "ignite-bst-dfact"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/pipeline1')]",
			"type": "Microsoft.DataFactory/factories/pipelines",
			"apiVersion": "2018-06-01",
			"properties": {
				"activities": [
					{
						"name": "Copy Data1",
						"type": "Copy",
						"policy": {
							"timeout": "7.00:00:00",
							"retry": 0,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"typeProperties": {
							"source": {
								"type": "BlobSource",
								"recursive": true
							},
							"sink": {
								"type": "FileSystemSink"
							},
							"enableStaging": false,
							"dataIntegrationUnits": 0
						},
						"inputs": [
							{
								"referenceName": "AzureBlob1",
								"type": "DatasetReference"
							}
						],
						"outputs": [
							{
								"referenceName": "BSTYogaFileShare1",
								"type": "DatasetReference"
							}
						]
					}
				]
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/datasets/AzureBlob1')]",
				"[concat(variables('factoryId'), '/datasets/BSTYogaFileShare1')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/AzureBlob1')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "igniteAzureBlobStorage1",
					"type": "LinkedServiceReference"
				},
				"type": "AzureBlob",
				"typeProperties": {
					"fileName": "inputEmp.txt",
					"folderPath": "test-bt"
				}
			}
		},
		{
			"name": "[concat(parameters('factoryName'), '/BSTYogaFileShare1')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "BST_YogaFileServer1",
					"type": "LinkedServiceReference"
				},
				"type": "FileShare",
				"typeProperties": {
					"fileName": "*.*",
					"folderPath": ""
				}
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/linkedServices/BST_YogaFileServer1')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/BST_YogaFileServer1')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"type": "FileServer",
				"typeProperties": {
					"host": "C:\\Temp",
					"userId": "Boon",
					"password": {
						"type": "AzureKeyVaultSecret",
						"store": {
							"referenceName": "ignite_BST_AzureKeyVault1",
							"type": "LinkedServiceReference"
						},
						"secretName": "Boon"
					}
				},
				"connectVia": {
					"referenceName": "ignite-bst-dfsh-ir01",
					"type": "IntegrationRuntimeReference"
				}
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/linkedServices/ignite_BST_AzureKeyVault1')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/ignite_BST_AzureKeyVault1')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"type": "AzureKeyVault",
				"typeProperties": {
					"baseUrl": "https://ignite-kv01.vault.azure.net/"
				}
			}
		}
	]
}